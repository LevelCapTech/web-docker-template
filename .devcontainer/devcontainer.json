{
  "name": "Python 3",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "python-app",
  "workspaceFolder": "/app",
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": ["ms-python.python"]
    }
  }
}
